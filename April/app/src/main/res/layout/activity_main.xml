<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText_message"
        android:layout_width="271dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="消息"
        android:inputType="text"
        android:text="你好！"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView2" />

    <Button
        android:id="@+id/button_send"
        android:layout_width="107dp"
        android:layout_height="61dp"
        android:text="发送"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/editText_message"
        app:layout_constraintTop_toTopOf="@+id/editText_message" />

    <EditText
        android:id="@+id/editText_localKey"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:ems="10"
        android:hint="LK"
        android:inputType="text"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_message" />

    <EditText
        android:id="@+id/editText_peerKey"
        android:layout_width="105dp"
        android:layout_height="61dp"
        android:layout_marginStart="24dp"
        android:ems="10"
        android:hint="PK"
        android:inputType="text"
        android:text="1"
        app:layout_constraintStart_toEndOf="@+id/editText_localKey"
        app:layout_constraintTop_toBottomOf="@+id/editText_message" />

    <Button
        android:id="@+id/button_connectServer"
        android:layout_width="107dp"
        android:layout_height="61dp"
        android:text="连接"
        app:layout_constraintEnd_toEndOf="@+id/button_send"
        app:layout_constraintHorizontal_bias="0.433"
        app:layout_constraintStart_toEndOf="@+id/editText_message"
        app:layout_constraintTop_toTopOf="@+id/editText_peerKey" />

    <Button
        android:id="@+id/button_exit"
        android:layout_width="wrap_content"
        android:layout_height="61dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="退出"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_localKey" />

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="413dp"
        android:layout_height="318dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView_showMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="消息" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>